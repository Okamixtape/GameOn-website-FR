---
interface Props {
  /**
   * Nom de l'entreprise affiché dans le copyright
   * @default "PIXEL CLASH"
   */
  companyName?: string;

  /**
   * Année du copyright
   * @default new Date().getFullYear()
   */
  year?: number;

  /**
   * Liens réseaux sociaux (optionnel)
   */
  socialLinks?: Array<{
    /** Plateforme (ex: "twitter", "linkedin") */
    platform: string;
    /** URL complète */
    url: string;
    /** Label ARIA descriptif */
    ariaLabel: string;
  }>;
}

const { 
  companyName = "PIXEL CLASH", 
  year = new Date().getFullYear(),
  socialLinks 
} = Astro.props;
---

<footer class="bg-gradient-to-r from-zinc-900 via-purple-900/50 to-zinc-900 text-zinc-300 py-6 mt-auto border-t border-retro-blue/20">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
      
      <!-- Section copyright -->
      <div class="text-center sm:text-left">
        <p class="text-sm">
          © {year} {companyName}. Tous droits réservés.
        </p>
      </div>

      <!-- Section liens légaux -->
      <nav aria-label="Liens légaux" class="flex flex-wrap justify-center sm:justify-end gap-4 text-sm">
        <a 
          href="/mentions-legales" 
          class="hover:text-retro-blue transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-retro-blue focus:ring-offset-2 focus:ring-offset-zinc-900 rounded px-1"
        >
          Mentions légales
        </a>
        <a 
          href="/politique-confidentialite" 
          class="hover:text-retro-blue transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-retro-blue focus:ring-offset-2 focus:ring-offset-zinc-900 rounded px-1"
        >
          Politique de confidentialité
        </a>
        <a 
          href="/cgu" 
          class="hover:text-retro-blue transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-retro-blue focus:ring-offset-2 focus:ring-offset-zinc-900 rounded px-1"
        >
          CGU
        </a>
      </nav>

      <!-- Section réseaux sociaux (optionnel) -->
      {socialLinks && socialLinks.length > 0 && (
        <div class="flex justify-center sm:justify-end gap-4">
          {socialLinks.map(({ platform, url, ariaLabel }) => (
            <a
              href={url}
              aria-label={ariaLabel}
              target="_blank"
              rel="noopener noreferrer"
              class="text-zinc-400 hover:text-white transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-zinc-900 rounded"
            >
              <!-- Icône placeholder - à remplacer par SVG réel -->
              <span class="sr-only">{ariaLabel}</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <circle cx="12" cy="12" r="10" />
              </svg>
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</footer>
