---
/**
 * FOOTER REDESIGN - Conforme Figma Make
 * 
 * Footer basé sur le code original App.tsx (Figma Make)
 * avec adaptations pour Astro (pas de Shadcn Button)
 * 
 * Différences clés vs V1 :
 * - Brand : PIXEL (cyan) + CLASH (magenta) séparés
 * - Grid : 30x30px (vs 50x50px)
 * - Titre Navigation : cyan
 * - Titre Légal : magenta (vs cyan)
 * - Buttons remplacés par <a> HTML
 */

import { Users, Github } from 'lucide-react';

interface Props {
  /**
   * Année du copyright
   * @default new Date().getFullYear()
   */
  year?: number;
}

const { 
  year = new Date().getFullYear()
} = Astro.props;
---

<footer class="relative border-t border-cyan-500/20">
  <!-- Grid Pattern Background (30x30px comme original) -->
  <div 
    class="absolute inset-0 opacity-10"
    style={{
      backgroundImage: 'linear-gradient(#00f3ff 1px, transparent 1px), linear-gradient(90deg, #00f3ff 1px, transparent 1px)',
      backgroundSize: '30px 30px'
    }}
  />
  
  <div class="container mx-auto px-4 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-8">
      <!-- Brand (PIXEL cyan + CLASH magenta) -->
      <div>
        <div class="text-2xl tracking-wider mb-4">
          <span class="text-[#00f3ff]">PIXEL</span>{' '}
          <span class="text-[#ff00ff]">CLASH</span>
        </div>
        <p class="text-gray-400 mb-2">Le championnat retro gaming</p>
        <p class="text-gray-400 mb-2">qui célèbre les racines du jeu vidéo.</p>
        <p class="text-gray-500 text-sm">© {year} Tous droits réservés.</p>
      </div>

      <!-- Navigation (titre cyan) -->
      <div>
        <h3 class="text-[#00f3ff] mb-4">NAVIGATION</h3>
        <ul class="space-y-2">
          <li><a href="/index-redesign" class="text-gray-400 hover:text-white transition-colors">Accueil</a></li>
          <li><a href="/tournament-redesign" class="text-gray-400 hover:text-white transition-colors">Le tournoi</a></li>
          <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">Notre histoire</a></li>
          <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a></li>
        </ul>
      </div>

      <!-- Legal (titre magenta) -->
      <div>
        <h3 class="text-[#ff00ff] mb-4">LÉGAL</h3>
        <ul class="space-y-2">
          <li><a href="/mentions-legales" class="text-gray-400 hover:text-white transition-colors">Mentions légales</a></li>
          <li><a href="/politique-confidentialite" class="text-gray-400 hover:text-white transition-colors">Confidentialité</a></li>
          <li><a href="/cgu" class="text-gray-400 hover:text-white transition-colors">CGU</a></li>
        </ul>
      </div>
    </div>

    <!-- Developer Info -->
    <div class="pt-8 border-t border-cyan-500/20 text-center">
      <p class="text-lg mb-1">
        <span class="bg-gradient-to-r from-[#00f3ff] to-[#ff00ff] bg-clip-text text-transparent">
          Designed & Coded by Loup Aubour
        </span>
        <span class="ml-2">⚡️</span>
      </p>
      <p class="text-gray-500 text-sm mb-4">
        Projet Portfolio • Développeur Full-Stack
      </p>
      <div class="flex justify-center gap-4">
        <a 
          href="/developer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-transparent border border-cyan-500/30 text-cyan-400 hover:bg-cyan-500/10 hover:border-cyan-500/50 rounded-md transition-all text-sm"
        >
          <Users className="w-4 h-4" />
          À propos du développeur
        </a>
        <a 
          href="https://github.com/Okamixtape" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-transparent border border-cyan-500/30 text-cyan-400 hover:bg-cyan-500/10 hover:border-cyan-500/50 rounded-md transition-all text-sm"
        >
          <Github className="w-4 h-4" />
          GitHub
        </a>
      </div>
      <p class="text-gray-600 text-xs mt-4">
        Lancement PRO : Ce projet est une démonstration technique et n'est pas lié à un vrai événement.
      </p>
      <p class="text-gray-600 text-xs">
        Contactez-moi pour vos projets de développement technique.
      </p>
    </div>
  </div>
</footer>
