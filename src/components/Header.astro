---
interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

const navItems = [
  { label: 'Accueil', href: '/' },
  { label: 'Le tournoi', href: '/details' },
  { label: 'Notre histoire', href: '/about' },
  { label: 'Blog', href: '/blog' },
] as const;
---

<header class="sticky top-0 z-50 bg-zinc-950 border-b-4 border-retro-blue shadow-lg overflow-hidden" role="banner">
  <!-- Pattern retro background (comme footer) -->
  <div class="absolute inset-0 opacity-5" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,217,255,.3) 10px, rgba(0,217,255,.3) 20px);"></div>
  
  <!-- Glow effect bottom -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-retro-blue to-transparent"></div>
  
  <div class="container mx-auto px-4 py-4 relative z-10">
    <nav class="flex items-center justify-between" aria-label="Navigation principale">
      <!-- Logo PIXEL CLASH Gradient - Plus Grand -->
      <a href="/" class="flex items-center gap-2 group" aria-label="PIXEL CLASH - Accueil">
        <h1 class="font-gaming text-3xl md:text-4xl lg:text-5xl font-bold uppercase tracking-wide">
          <span class="bg-gradient-to-r from-retro-blue via-retro-purple to-retro-pink bg-clip-text text-transparent group-hover:drop-shadow-[0_0_15px_rgba(0,217,255,0.6)] transition-all">
            PIXEL CLASH
          </span>
        </h1>
      </a>

      <!-- Navigation Desktop -->
      <ul class="hidden md:flex md:items-center md:gap-8">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href}
              class={`text-white hover:text-retro-blue transition-colors font-medium focus:outline-none focus:ring-2 focus:ring-retro-blue focus:ring-offset-2 focus:ring-offset-transparent rounded px-2 py-1 ${
                currentPath === item.href ? 'text-retro-blue' : ''
              }`}
              aria-current={currentPath === item.href ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Bouton Hamburger Mobile -->
      <button
        id="mobile-menu-button"
        type="button"
        class="md:hidden text-white hover:text-retro-blue transition-colors p-2 focus:outline-none focus:ring-2 focus:ring-retro-blue rounded"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Menu de navigation"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Menu Mobile -->
    <div
      id="mobile-menu"
      class="hidden md:hidden absolute top-full left-0 right-0 bg-zinc-900 border-t border-zinc-800 shadow-lg z-50"
      role="menu"
      style="display: none;"
    >
      <!-- Bouton Close Mobile -->
      <div class="flex justify-end px-4 pt-4">
        <button
          id="mobile-menu-close"
          type="button"
          class="text-gray-400 hover:text-white transition-colors p-2 focus:outline-none focus:ring-2 focus:ring-[#8B5CF6] rounded"
          aria-label="Fermer le menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <ul class="flex flex-col py-4">
        {navItems.map(item => (
          <li role="none">
            <a 
              href={item.href}
              class={`block px-6 py-3 text-white hover:bg-purple-900/50 hover:text-retro-blue transition-colors focus:outline-none focus:ring-2 focus:ring-retro-blue focus:ring-inset ${
                currentPath === item.href ? 'bg-purple-900/50 text-retro-blue' : ''
              }`}
              role="menuitem"
              aria-current={currentPath === item.href ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script is:inline>
  // Toggle menu mobile - JavaScript pur (pas de TypeScript)
  (function() {
    function initMobileMenu() {
      var button = document.getElementById('mobile-menu-button');
      var closeButton = document.getElementById('mobile-menu-close');
      var menu = document.getElementById('mobile-menu');

      if (!button || !menu) {
        console.error('Menu mobile: éléments non trouvés');
        return;
      }

      console.log('Menu mobile initialisé');

      // Fonction pour ouvrir le menu
      function openMenu() {
        console.log('Ouverture menu');
        button.setAttribute('aria-expanded', 'true');
        menu.classList.remove('hidden');
        menu.style.display = 'block';
      }

      // Fonction pour fermer le menu
      function closeMenu() {
        console.log('Fermeture menu');
        button.setAttribute('aria-expanded', 'false');
        menu.classList.add('hidden');
        menu.style.display = 'none';
      }

      // Toggle au clic sur le bouton hamburger
      button.addEventListener('click', function(e) {
        e.stopPropagation();
        var isExpanded = button.getAttribute('aria-expanded') === 'true';
        console.log('Clic hamburger, expanded:', isExpanded);
        if (isExpanded) {
          closeMenu();
        } else {
          openMenu();
        }
      });

      // Fermer au clic sur le bouton close
      if (closeButton) {
        closeButton.addEventListener('click', function(e) {
          e.stopPropagation();
          closeMenu();
        });
      }

      // Fermer le menu en cliquant sur un lien
      var menuLinks = menu.querySelectorAll('a');
      menuLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          closeMenu();
        });
      });

      // Fermer le menu en cliquant à l'extérieur
      document.addEventListener('click', function(e) {
        if (!button.contains(e.target) && !menu.contains(e.target)) {
          closeMenu();
        }
      });

      // Fermer avec la touche Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && button.getAttribute('aria-expanded') === 'true') {
          closeMenu();
          button.focus();
        }
      });
    }

    // Initialiser au chargement
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
      initMobileMenu();
    }

    // Réinitialiser après navigation (Astro View Transitions)
    document.addEventListener('astro:page-load', initMobileMenu);
  })();
</script>
