---
/**
 * About Page Redesign - Conforme Figma Make
 * 
 * Sections :
 * 1. THE ORIGIN STORY (Hero)
 * 2. NOTRE PARCOURS (Timeline animée)
 * 3. NOS STATISTIQUES (Compteurs)
 * 4. NOS VALEURS (3 cartes)
 * 5. CTA Final
 */

import LayoutRedesign from '../layouts/LayoutRedesign.astro';
import Header from '../components/redesign/layout/Header';
import Footer from '../components/redesign/layout/Footer.astro';
import AboutPage from '../components/redesign/about/AboutPage';
import SchemaOrg from '../components/SchemaOrg.astro';

const title = "À Propos PIXEL CLASH | Histoire Championnat Retrogaming France";
const description = "Découvrez l'histoire de PIXEL CLASH, le plus grand championnat retrogaming de France depuis 2015. Notre mission : célébrer l'âge d'or des jeux arcade et rassembler la communauté gaming.";
---

<LayoutRedesign 
  title={title} 
  description={description}
>
  <!-- Schema.org Organization -->
  <SchemaOrg type="Organization" slot="head" />
  
  <div class="min-h-screen bg-bg-dark text-text-light">
    
    <Header client:load currentPath={Astro.url.pathname} />
    
    <div class="pt-20">
      <AboutPage client:load />
    </div>

    <Footer />

  </div>
</LayoutRedesign>
