---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les articles publiés
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Trier par date (plus récent en premier)
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Articles featured
const featuredPosts = sortedPosts.filter(post => post.data.featured);

// Formater la date
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<Layout 
  title="Blog - PIXEL CLASH Championship 2026"
  description="Découvrez l'univers du retro gaming : histoire, guides, actualités et interviews. Tout sur les jeux arcade classiques et la culture gaming."
>
  <div class="container mx-auto px-4 py-16">
    
    <!-- Hero Blog -->
    <section class="text-center mb-16">
      <div class="inline-flex items-center gap-2 bg-retro-blue/10 border border-retro-blue/30 rounded-full px-4 py-2 mb-4">
        <svg class="w-4 h-4 text-retro-blue" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
        </svg>
        <span class="font-bold text-sm uppercase tracking-wider text-retro-blue">Blog</span>
      </div>
      
      <h1 class="font-gaming text-5xl md:text-6xl font-bold mb-6 uppercase tracking-wide">
        <span class="bg-gradient-to-r from-retro-blue via-retro-purple to-retro-pink bg-clip-text text-transparent">
          Univers Retro Gaming
        </span>
      </h1>
      
      <p class="text-xl text-zinc-600 max-w-2xl mx-auto">
        Histoire, guides, actualités et culture gaming. Plongez dans l'âge d'or de l'arcade.
      </p>
    </section>

    <!-- Articles Featured -->
    {featuredPosts.length > 0 && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8 flex items-center gap-3">
          <span class="text-amber-500">⭐</span>
          Articles à la Une
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          {featuredPosts.map((post) => (
            <a 
              href={`/blog/${post.slug}`}
              class="group relative bg-white border-2 border-zinc-200 rounded-xl overflow-hidden hover:border-retro-blue hover:-translate-y-2 hover:shadow-2xl hover:shadow-retro-blue/20 transition-all duration-300"
            >
              <!-- Image -->
              <div class="aspect-video bg-gradient-to-br from-retro-blue to-retro-purple overflow-hidden">
                <img 
                  src={post.data.image.url} 
                  alt={post.data.image.alt}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="text-xs bg-retro-blue/10 text-retro-blue px-2 py-1 rounded-full">
                      #{tag}
                    </span>
                  ))}
                </div>
                
                <!-- Title -->
                <h3 class="font-bold text-2xl text-zinc-900 mb-3 group-hover:text-retro-blue transition-colors">
                  {post.data.title}
                </h3>
                
                <!-- Description -->
                <p class="text-zinc-600 mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                
                <!-- Meta -->
                <div class="flex items-center gap-4 text-sm text-zinc-500">
                  <span>{formatDate(post.data.pubDate)}</span>
                  <span>•</span>
                  <span>{post.data.author}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Tous les Articles -->
    <section>
      <h2 class="text-3xl font-bold mb-8">Tous les Articles</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        {sortedPosts.map((post) => (
          <a 
            href={`/blog/${post.slug}`}
            class="group relative bg-white border-2 border-zinc-200 rounded-xl overflow-hidden hover:border-retro-purple hover:-translate-y-2 hover:shadow-2xl hover:shadow-retro-purple/20 transition-all duration-300"
          >
            <!-- Image -->
            <div class="aspect-video bg-gradient-to-br from-retro-purple to-retro-pink overflow-hidden">
              <img 
                src={post.data.image.url} 
                alt={post.data.image.alt}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            
            <!-- Content -->
            <div class="p-6">
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="text-xs bg-retro-purple/10 text-retro-purple px-2 py-1 rounded-full">
                    #{tag}
                  </span>
                ))}
              </div>
              
              <!-- Title -->
              <h3 class="font-bold text-xl text-zinc-900 mb-3 group-hover:text-retro-purple transition-colors line-clamp-2">
                {post.data.title}
              </h3>
              
              <!-- Description -->
              <p class="text-zinc-600 mb-4 line-clamp-3 text-sm">
                {post.data.description}
              </p>
              
              <!-- Meta -->
              <div class="text-sm text-zinc-500">
                {formatDate(post.data.pubDate)}
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- CTA Newsletter (Optionnel) -->
    <section class="mt-16 text-center bg-gradient-to-r from-retro-purple via-retro-blue to-retro-purple p-12 rounded-lg text-white shadow-lg shadow-retro-blue/30">
      <h2 class="font-gaming text-3xl font-bold mb-4 uppercase tracking-wide">Restez Informé !</h2>
      <p class="text-xl mb-8 opacity-90">
        Recevez les derniers articles et actualités du retro gaming directement dans votre boîte mail.
      </p>
      <button 
        class="px-8 py-4 bg-white text-retro-purple font-bold rounded-lg hover:scale-105 transition-transform"
      >
        S'abonner à la Newsletter
      </button>
    </section>

  </div>
</Layout>
