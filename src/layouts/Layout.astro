---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const {
  title,
  description = "Inscrivez-vous au tournoi GameOn et participez à des compétitions gaming exceptionnelles. Événements e-sport partout en France.",
  image = "/Logo.png",
  type = "website",
  noindex = false,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
const canonicalImageUrl = new URL(image, Astro.site).href;

// Import global styles (includes fonts)
import '../styles/global.css';

// Import components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import RegistrationModal from '../components/RegistrationModal.astro';
---
<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- Meta basics -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  <title>{title} | GameOn</title>
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- OpenGraph -->
  <meta property="og:type" content={type} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={canonicalImageUrl} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:site_name" content="GameOn Events" />
  <meta property="og:locale" content="fr_FR" />
  
  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={canonicalImageUrl} />
  
  <!-- Fonts preload -->
  <link rel="preload" href="/fonts/DM_Sans/DMSans-Regular.ttf" as="font" type="font/ttf" crossorigin />
  <link rel="preload" href="/fonts/DM_Sans/DMSans-Medium.ttf" as="font" type="font/ttf" crossorigin />
  <link rel="preload" href="/fonts/DM_Sans/DMSans-Bold.ttf" as="font" type="font/ttf" crossorigin />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Generator -->
  <meta name="generator" content={Astro.generator} />
  
  <!-- Structured Data JSON-LD (SportsEvent) -->
  {Astro.url.pathname === '/' && (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SportsEvent",
      "name": "Tournoi Gaming Régional 2025",
      "description": "La plus grande compétition esport de la région. 15 000€ de cashprize, 128 joueurs, tous niveaux acceptés.",
      "startDate": "2025-03-15",
      "endDate": "2025-03-17",
      "location": {
        "@type": "Place",
        "name": "Arena GameOn",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Paris",
          "addressCountry": "FR"
        }
      },
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "EUR",
        "availability": "https://schema.org/InStock",
        "url": "https://gameon-events.web.app/"
      },
      "organizer": {
        "@type": "Organization",
        "name": "GameOn",
        "url": "https://gameon-events.web.app/"
      }
    })} />
  )}
</head>
<body class="font-sans antialiased flex flex-col min-h-screen">
  <Header currentPath={Astro.url.pathname} />
  <main class="flex-grow">
    <slot />
  </main>
  <Footer />
  <RegistrationModal />
</body>
</html>
